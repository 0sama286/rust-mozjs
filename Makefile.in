VPATH=%VPATH%

RUSTC ?= rustc
RUSTFLAGS ?=

RUST_SRC = $(shell find $(VPATH)/. -type f -name '*.rs')

.PHONY: all
all: libjs.dummy

libjs.dummy: js.rc $(RUST_SRC)
	$(RUSTC) $(RUSTFLAGS) $< -o $@
	touch $@

js-test: js.rc $(JS_SRC)
	$(RUSTC) $(RUSTFLAGS) $< -o $@ --test

check: js-test
	./js-test

.PHONY: clean
clean:
	rm -f js-test *.so *.dylib *.dll *.dummy
